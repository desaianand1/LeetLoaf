{
	"name": "leet-loaf",
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run",
		"lint-staged": "lint-staged",
		"a11y": "svelte-check --a11y",
		"security-check": "pnpm audit && svelte-check --diagnostic-sources js,ts,svelte --fail-on-warnings",
		"prepare": "cd .. && husky oven/.husky"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@iconify-json/lucide": "^1.2.14",
		"@iconify-json/simple-icons": "^1.2.11",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/chrome": "^0.0.280",
		"@types/eslint": "^9.6.1",
		"@types/webextension-polyfill": "^0.12.1",
		"autoprefixer": "^10.4.20",
		"bits-ui": "1.0.0-next.54",
		"clsx": "^2.1.1",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^5.1.16",
		"svelte-check": "^4.0.7",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.14",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.14.0",
		"unplugin-icons": "^0.20.1",
		"vite": "^5.4.11",
		"vite-plugin-web-extension": "^4.3.0",
		"vitest": "^2.1.5",
		"webextension-polyfill": "^0.12.0"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.12",
		"mode-watcher": "^0.4.1"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --write",
			"eslint --fix",
			"pnpm a11y",
			"pnpm security-check"
		],
		"*.{json,css,md}": [
			"prettier --write"
		]
	}
}